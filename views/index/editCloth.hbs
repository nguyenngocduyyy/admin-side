<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">{{title}}</h4>
        {{!-- <p class="card-category">Complete your profile</p> --}}
    </div>
    <div class="card-body">
        <form name="cloth" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Product name</label>
                        <input name="nameProduct" type="text" class="form-control" value="{{body.nameProduct}}" required>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Price</label>
                        <input name="price" type="number" class="form-control" value="{{body.price}}" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group bmd-form-group">
                        <label for="imgSrc">Choose product picture</label>
                        <div class="form-group form-file-upload form-file-simple bmd-form-group">
                            <input type="file" name="imgSrc" class="inputFileHidden" accept="image/*">
                            <input type="text" class="form-control inputFileVisible" placeholder="{{body.imgSrc}}">
                        </div>
                    </div>
                    {{!-- <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">Cover image link</label>
                        <input name="imgSrc" type="text" class="form-control" value="{{body.imgSrc}}">
                    </div> --}}
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="bmd-label-floating" for="inputState">Choose product type</label>
                        <select name="typeProduct" id="inputState" class="form-control">
                            {{#each typeProduct}}
                            <option>{{nameTypeProduct}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label></label>
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating">Product description </label>
                            <textarea name="productDescription" class="form-control"
                                rows="5">{{body.productDescription}}</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/editCloth/{{id}}/remove" class="btn btn-danger btn-lg" role="button" aria-disabled="true"
                {{delBtn}}>DELETE</a>
            <button type="submit" class="btn btn-success btn-lg pull-right">{{btnText}}</input>
                <div class="clearfix"></div>
        </form>
    </div>
</div>